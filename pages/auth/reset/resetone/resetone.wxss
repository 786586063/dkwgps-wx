.container {
  background: #fff;
  display: flex;
  flex-direction: column;
}

.form-logo {
  display: flex;
  flex-direction: row;
  margin-top: 50rpx;
  width: 100%;
  justify-content: center;
  align-items: center;
  background: #fff;
}

.logo {
  width: 150rpx;
  height: 150rpx;
  margin-bottom: 56rpx;
}
.form-box {
  display: flex;
  flex-direction: row;
  height: 80rpx;
  background: #efeff4;
  border-radius: 10rpx;
  align-items: center;
  margin: 20rpx 65rpx;
}
.form-item {
  display: flex;
  width: 100%;
  justify-content: space-between;
  flex-direction: row;
  border-radius: 10rpx;
  margin-right: 20rpx;
  margin-left: 20rpx;
 
}

.form-item image {
  height: 50rpx;
  width: 50rpx;
  align-self: center;
  margin-left: 10rpx;
  margin-right: 20rpx;
}

.form-item input {
  flex: 1;
  font-size: 30rpx;
  color: #999999;
}
.btn-login{
  display: flex;
  justify-content: center;

  width: 100%;
  height: 100%;
 
   background: #48A6FE; 
   
}
.btn-login .btn-text{
  display: flex;
  color: #fff;
  font-size: 30rpx;
}
.bottom{
  position: absolute;
  bottom: 68rpx;
  left: 0rpx;
  height: 329rpx;
  width: 100%;

}
