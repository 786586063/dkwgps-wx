.page{
  display: flex;
  flex-direction: column;
 
}
.content_row{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
   margin-left: 30rpx;
  margin-right: 30rpx;
  align-items: center;
  height: 100rpx;
}
.content_row view{
  color: #666666;
  font-size: 28rpx;
}
.kong{
  background: #F2F2F2;
  height: 2rpx;
}
.kong2{
  background: #F2F2F2;
  height: 20rpx;
}
.row_right{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.select{
  margin-right: 10rpx;
  border: 1rpx solid #48a6fe;
  color: #48a6fe;
  padding: 10rpx 10rpx;
  border-radius: 10rpx;
  width: 80rpx;
  justify-content: center;
  align-items: center;
}
.row_detail{
  margin-right: 10rpx;
  border: 1rpx solid #F2F2F2;
  /* color: #48a6fe; */
  padding: 10rpx 10rpx;
  border-radius: 10rpx;
  width: 80rpx;
  justify-content: center;
  align-items: center;
}
.row_detail text{
  color: #666666;
}
.select text{
  color: #48a6fe;
}
.row_left{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.row_left image{
  width: 48rpx;
  height: 48rpx;
}
.row_right image{
  width: 30rpx;
  height: 30rpx;
}
.left_oter{
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}
.left_oter .one{
  font-size: 22rpx;
  color: #666666;
}
.left_oter .two{
  font-size: 22rpx;
  color: #999999;
}
.content_row2{
   display: flex;
  flex-direction: row;
  justify-content: flex-end;
   margin-left: 30rpx;
  margin-right: 30rpx;
  align-items: center;
  height: 100rpx;
}
.amount{
  font-size: 34rpx;
  color: #48a6fe;
  margin-left: 20rpx;
}
.submit{
  width: 90%;
  height: 100%;
  margin-top: 30rpx;
  background: #48a6fe;
  color: #fff;
}