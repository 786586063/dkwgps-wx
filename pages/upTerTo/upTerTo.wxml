<view class='page'>
  <view class='content_row'>
    <text>当前账户：</text>
    <text style='margin-left:20rpx;'>{{parent}}</text>
  </view>
  <view class='kong'></view>
  <view class='content_row'>
    <text>当前设备：</text>
    <text style='margin-left:20rpx;'>{{tname}}</text>
  </view>
  <view class='kong'></view>
  <view class='content_row'>
    <text>接收用户：</text>
     <input class="username"   bindinput="bindUserNameInput" placeholder='请输入接收账户'></input>
  </view>
  <view class='kong'></view>
   <view class='content_row'>
    <button class='btn-login' bindtap="accountLogin">
      <text class='btn-text'>转移</text>
    </button>
  </view>
</view>